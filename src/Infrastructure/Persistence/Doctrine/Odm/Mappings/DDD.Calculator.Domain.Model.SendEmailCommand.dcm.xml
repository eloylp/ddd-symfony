<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">


    <document name="DDD\Calculator\Domain\Model\SendEmailCommand" collection="commands">
        <field fieldName="id" id="true"/>
        <field fieldName="type" type="string" index="true"/>
        <field fieldName="version" type="integer" index="true"/>
        <field fieldName="to" type="string" index="true"/>
        <field fieldName="subject" type="string" index="true"/>
        <field fieldName="templateName" name="template_name" type="string" />
        <field fieldName="templateData" name="template_data" type="hash" />
        <field fieldName="time" type="date"/>

    </document>
</doctrine-mongo-mapping>
